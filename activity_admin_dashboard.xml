<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <Button
        android:id="@+id/issueCertBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Issue Certificate" />

    <Button
        android:id="@+id/bulkUploadBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bulk Upload Certificates"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/verifyCertBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify Certificate"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/uploadTemplateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Canva Template" />


    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="20dp" />
</LinearLayout>
